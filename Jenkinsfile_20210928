pipeline {
 agent any
 stages {
  stage ('compile the application') {
   steps {
    sh 'mvn compile'
   }
  }
  stage ('Generate War package') {
   steps {
    sh 'mvn package'
   }
  }
  stage ('create docker image') {
   steps {
    sh 'sudo docker build -t devopsxprts/addressbook:20210928.$BUILD_NUMBER .'
   }
  }
 }
}
